mixin bio(name, github, twitter, facebook, googleplus)
    .list-group-item
        h4.list-group-item-heading=name
        .list-group-item-text
            if block
                block
            br
            if github || twitter || facebook || googleplus
                .btn-group
                    if github
                        a.btn.btn-default(href=github) Github
                    if twitter
                        a.btn.btn-default(href=twitter) Twitter
                    if facebook
                        a.btn.btn-default(href=facebook) Facebook
                    if googleplus
                        a.btn.btn-default(href=googleplus) Google+
                    
                    
                    
                    