extends ../bootstrap.jade

block body
    .container
        .page-header
            h1 Ask a Question
        .container
            form#question-entry
                .row
                    .input-group.input-group-lg.input-group-primary.col-sm-8.pull-left
                        span.input-group-addon Question: 
                        input#title.form-control(type="text" placeholder="What is..." name="title")
                br
                br
                .row
                    .input-group.col-sm-8
                        .panel.panel-primary
                            .panel-heading
                                h3.panel-title(style="font-size:18px;") Description:
                            .panel-body(style="padding:0px;")
                                textarea#description.form-control(rows="12" name="description" style="resize:none;")
                .row
                    .input-group.input-group-lg.input-group-primary.col-sm-8
                        span.input-group-addon Tags: 
                        input#tags.form-control.autocomplete-tags(type="text" placeholder="science, technology..." name="title")    
                        
                        
                        
                        